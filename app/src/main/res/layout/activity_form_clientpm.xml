<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/colorPrimaryDark"
    tools:context=".vue.FormClientpmActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_raison"
        android:hint="Raison sociale"
        android:padding="10dp"
        android:inputType="textPersonName"
        android:background="@color/white" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_ifu"
        android:hint="N° IFU"
        android:padding="10dp"
        android:inputType="textPersonName"
        android:background="@color/white" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_telephone"
        android:hint="N° Téléphone"
        android:padding="10dp"
        android:inputType="phone"
        android:maxLength="8"
        android:layout_marginTop="10dp"
        android:background="@color/white" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_email"
        android:hint="E-mail"
        android:padding="10dp"
        android:inputType="textEmailAddress"
        android:background="@color/white" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_adresse"
        android:hint="Adresse"
        android:inputType="text"
        android:padding="10dp"
        android:background="@color/white" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bt_valider"
            android:text="@string/valider"
            android:background="@android:color/holo_orange_light"
            android:layout_marginEnd="80dp"
            style="?android:borderlessButtonStyle"
            />

        <Button
            android:id="@+id/bt_annuler"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_orange_light"
            android:text="@string/annuler"
            style="?android:borderlessButtonStyle"/>
    </LinearLayout>



</LinearLayout>